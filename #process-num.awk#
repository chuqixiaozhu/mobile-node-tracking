BEGIN {
    max_nmnode = 0;
}
{
    nmnode = $1;
    valid_time = $3;
    target_speed = $4;

    if (max_nmnode < nmnode) {
        max_nmnode = nmnode;
    }

    sum_valid_time[nmnode] += valid_time;
    sum_target_speed[nmnode] += target_speed;
    ++count[nmnode];
}
END {
    for (i = 0; i < max_nmnode + 1; ++i) {
        avg_valid_time[i] = 1.0 * sum_valid_time[i] / count[i];
        avg_target_speed[i] = 1.0 * sum_target_speed[i] / count[i];
    }
    for (i = 0; i < max_nmnode + 1; ++i) {
        printf("%d %f %d %f\n", i, avg_valid_time[i], i, avg_target_speed[i]);
    }
}

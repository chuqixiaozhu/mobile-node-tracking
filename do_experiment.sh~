#! /bin/bash
path="$(date +%Y%m%d-%H%M%S)"
file_num="${path}/${path}-result_m_node_num"
file_speed="${path}/${path}-result_target_speed"
mkdir $path
cp -u process.awk ${path}
#ns mobile.tcl 100 100 100 10 3 ${file_num} ${file_speed}
if [ x$1 != x ]
then
    count=$1
else
    count=20
fi
for nmnode in $(seq 0 1)
do
    for i in $(seq 1 $count)
    do
        #echo ""
        now_time="$(date +%H%M%S)"
        ns mobile.tcl 100 100 100 ${nmnode} 3 ${file_num} ${file_speed} ${path} ${now_time}
    done
done
#cd $path
awk -f process.awk ${path}/${path}-result_m_node_num > ${path}/${path}-number-avg